{
  "expo": {
    "name": "Bitcoin Block Explorer",
    "slug": "bitcoin-explorer-android",
    "description": "A simple app, but beautiful, to explore the Bitcoin blockchain.",
    "privacy": "hidden",
    "version": "1.0.0",
    "platforms": ["android"],
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#111428"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#111428"
      },
      "package": "com.pedrow21.bitcoinexplorerandroid"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "af163f27-004c-406d-a24b-aaaceaa27b0a"
      }
    }
  }
}
